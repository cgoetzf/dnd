@model DndOnline.Models.MonsterModel
@{
    ViewBag.Title = "Monster";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@Html.ValidationSummary(true)
@using (Html.BeginForm("Monster", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "ticketForm" }))
{
    <div class="form-row align-items-center">
        <div class="col-md-12 mb-3" style="background-color:white">
            <div class="media">
                <img src="~/Content/Images/Characters/AARAKOCRA_Thumb.png" class="align-self-center mr-3 battle-img" data-toggle="modal" data-target="#exampleModal2">
                <div class="media-body">
                    <div class="row">
                        <div class="col-auto">
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Nome</span>
                                </div>
                                @Html.TextBoxFor(m => m.Name, (object)new { @class = "form-control", placeholder = "Nome" })
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">HP Min</span>
                                </div>
                                @Html.TextBoxFor(m => m.StaticHp, (object)new { @class = "form-control field-att", placeholder = "0" })
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">HP Calc</span>
                                </div>
                                @Html.TextBoxFor(m => m.RandomHp, (object)new { @class = "form-control field-att", placeholder = "0" })
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Desafio</span>
                                </div>
                                @Html.TextBoxFor(m => m.Challenge, (object)new { @class = "form-control field-att", placeholder = "0" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Classe de Armadura</span>
                            </div>
                            @Html.TextBoxFor(m => m.ArmorClass, (object)new { @class = "form-control field-att", placeholder = "0" })
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Deslocamento</span>
                            </div>
                            @Html.TextBoxFor(m => m.Speed, (object)new { @class = "form-control", placeholder = "0" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-row align-items-center">
        <div class="col-auto">
            <div class="input-group input-group-sm mb-3 field-att">
                <div class="input-group-prepend">
                    <span class="input-group-text">FOR</span>
                </div>
                @Html.TextBoxFor(m => m.Strenght, (object)new { @class = "form-control ", placeholder = "0" })
                <div class="input-group-prepend">
                    <span class="input-group-text">MOD</span>
                </div>
                @Html.TextBoxFor(m => m.ModStrenght, (object)new { @class = "form-control field-att", placeholder = "0" })
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">DES</span>
                </div>
                @Html.TextBoxFor(m => m.Dexterity, (object)new { @class = "form-control field-att", placeholder = "0" })
                <div class="input-group-prepend">
                    <span class="input-group-text">MOD</span>
                </div>
                @Html.TextBoxFor(m => m.ModDexterity, (object)new { @class = "form-control field-att", placeholder = "0" })
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">CON</span>
                </div>
                @Html.TextBoxFor(m => m.Constituition, (object)new { @class = "form-control field-att", placeholder = "0" })
                <div class="input-group-prepend">
                    <span class="input-group-text">MOD</span>
                </div>
                @Html.TextBoxFor(m => m.ModConstituition, (object)new { @class = "form-control field-att", placeholder = "0" })
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">INT</span>
                </div>
                @Html.TextBoxFor(m => m.Intelligence, (object)new { @class = "form-control field-att", placeholder = "0" })
                <div class="input-group-prepend">
                    <span class="input-group-text">MOD</span>
                </div>
                @Html.TextBoxFor(m => m.ModIntelligence, (object)new { @class = "form-control field-att", placeholder = "0" })
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">SAB</span>
                </div>
                @Html.TextBoxFor(m => m.Wisdom, (object)new { @class = "form-control field-att", placeholder = "0" })
                <div class="input-group-prepend">
                    <span class="input-group-text">MOD</span>
                </div>
                @Html.TextBoxFor(m => m.ModWisdom, (object)new { @class = "form-control field-att", placeholder = "0" })
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">CAR</span>
                </div>
                @Html.TextBoxFor(m => m.Charisma, (object)new { @class = "form-control field-att", placeholder = "0" })
                <div class="input-group-prepend">
                    <span class="input-group-text">MOD</span>
                </div>
                @Html.TextBoxFor(m => m.ModCharisma, (object)new { @class = "form-control field-att", placeholder = "0" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label>Descrição</label>
            @Html.TextAreaFor(m => m.Description, (object)new { @class = "form-control tiny-description" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label>Habilidades</label>
            @Html.TextAreaFor(m => m.Skills, (object)new { @class = "form-control tiny-description" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label>Ações</label>
            @Html.TextAreaFor(m => m.Actions, (object)new { @class = "form-control tiny-description" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label>Ações Lendárias</label>
            @Html.TextAreaFor(m => m.LegendaryActions, (object)new { @class = "form-control tiny-description" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label>Traços Especiais</label>
            @Html.TextAreaFor(m => m.SpecialTraits, (object)new { @class = "form-control tiny-description" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary pull-right" name="btSubmit" value="New" id="btNew"><span class="fa fa-floppy-o"></span> Salvar</button>
        </div>
    </div>
}


<script>
    $(function () {
        $('.elastic').elastic();

    });


    tinymce.init({
        selector: '.tiny-description',
        plugins: "codesample, code, image, textcolor, link, table, wordcount",
        menubar: false,
        statusbar: false,
        toolbar1: 'undo redo | bold italic',
        valid_elements: 'strong/b,div[align],br,p,li,ul,em,span',
        setup: function (ed) {
            ed.on('init', function () {
                this.getDoc().body.style.fontFamily = 'Segoe UI', 'Calibri', 'Verdana';
                this.getDoc().body.style.fontSize = '1.1em';
            });
        }
    });
</script>
